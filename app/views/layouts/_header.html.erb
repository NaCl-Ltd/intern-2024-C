<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= image_tag("ruby_logo.png", id: "logo_icon", alt: "Ruby logo", width: "30px") %>
      <%= link_to "intern app", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right">
        <li><%= link_to t("Home"), root_path %></li>
        <li><%= link_to t("Help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("Users"), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t"Account" %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("Profile"), current_user %></li>
              <li><%= link_to t("Settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("Log out"), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("Log in"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" id="language" class="dropdown-toggle">
            <%= t"Language" %><b class="caret"></b>
          </a>
          <ul id="language-menu" class="dropdown-menu">
            <li><%= link_to t("English"), url_for(locale: 'en') %></li>
            <li><%= link_to t("Japanese"), url_for(locale: 'ja') %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
