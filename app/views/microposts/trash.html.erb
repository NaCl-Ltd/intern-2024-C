<div class='row'>
  <div class='col-md-8'>
    <h3>Trash</h3>
    <% if @microposts.any? %>
      <ol class='microposts'>
        <%= render @microposts %>
      </ol>
    <% else %>
      <p>Nothing in trash</p>
      <p>Microposts in trash will be deleted forever after 30 days.</p>
    <% end %>
  </div>
</div>
