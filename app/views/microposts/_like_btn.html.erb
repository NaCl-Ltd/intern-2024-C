<%= turbo_frame_tag micropost do %>
  <%= pluralize(micropost.likes.count, 'like') %>

  <% if logged_in? %>
    <% if micropost.likes.exists?(user_id: current_user.id) %>
      <%= button_to 'unlike', unlike_micropost_path(micropost), method: :delete %>
    <% else %>
      <%= button_to 'like', like_micropost_path(micropost), method: :post %>
    <% end %>
  <% end %>
<% end %>
