<%= form_with(model: @micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "文章を入力..." %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, multiple: true, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
