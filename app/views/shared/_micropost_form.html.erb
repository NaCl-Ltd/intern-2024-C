<%= form_with(model: @micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("Compose new micropost") %>
  </div>
  <%= f.submit t("Post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :images, multiple: true, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
